<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Titre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Medication"
            android:textSize="24sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Nom du médicament -->
        <EditText
            android:id="@+id/medication_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Medication Name"
            android:background="@drawable/edittext_border"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Type -->
        <EditText
            android:id="@+id/medication_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type (ex: Tablets, Syrup...)"
            android:background="@drawable/edittext_border"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Fréquence -->
        <EditText
            android:id="@+id/medication_frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Frequency (ex: Once a day)"
            android:background="@drawable/edittext_border"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Dosage -->
        <EditText
            android:id="@+id/medication_dosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dosage (ex: 1 pill)"
            android:background="@drawable/edittext_border"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Heure -->
        <Button
            android:id="@+id/time_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Time"
            android:backgroundTint="#B39DDB"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <!-- Importer une photo -->
        <ImageView
            android:id="@+id/medication_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="#E0E0E0"
            android:layout_marginBottom="24dp"
            android:scaleType="centerCrop" />

        <!-- Bouton Ajouter -->
        <Button
            android:id="@+id/save_medication_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Medication"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
