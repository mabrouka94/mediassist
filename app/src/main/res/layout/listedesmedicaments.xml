<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Barre de recherche -->
    <EditText
        android:id="@+id/search_medications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search medications..."
        android:padding="12dp"
        android:background="@drawable/edittext_border"
        android:layout_margin="16dp" />

    <!-- Liste des mÃ©dicaments -->

    <!-- Bouton Ajouter -->

    <ListView
        android:id="@+id/medications_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_medications"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-62dp"
        android:layout_marginEnd="-33dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/add_medication_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:backgroundTint="#B39DDB"
        android:text="+"
        android:textSize="24sp"
        android:textColor="#FFFFFF" />
</RelativeLayout>
